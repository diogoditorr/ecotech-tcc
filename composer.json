{
    "name": "diogoditorr/ecotech-tcc",
    "type": "project",
    "license": "Apache License 2.0",
    "scripts": {
        "test": [
            "@test-rollback --quiet", 
            "@test-migrate --quiet", 
            "@test-exec", 
            "@test-rollback --quiet"
        ],
        "test-dox": [
            "@test-rollback --quiet", 
            "@test-migrate --quiet", 
            "@test-exec --testdox", 
            "@test-rollback --quiet"
        ],
        "test-dox-v": [
            "@test-rollback", 
            "@test-migrate", 
            "@test-exec --testdox", 
            "@test-rollback"
        ],
        "test-exec": "phpunit -v --test-suffix .php --bootstrap tests/bootstrap.php tests",
        "test-migrate": "phinx migrate -e testing",
        "test-rollback": "phinx rollback -e testing -t 0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Php\\": "src/php/",
            "App\\Database\\": "db/",
            "App\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Diego Oliveira",
            "email": "35296262+diogoditorr@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.3",
        "robmorgan/phinx": "^0.12.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
