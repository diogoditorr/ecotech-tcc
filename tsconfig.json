{
    "compilerOptions": {
        "outDir": "./lib",
        "useDefineForClassFields": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es5",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
    },
    "include": [
        "src",
        "public/scripts"
    ]
}