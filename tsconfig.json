{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
    },
    "include": ["public/scripts"],
    "references": [{ "path": "tsconfig.node.json" }]
}
